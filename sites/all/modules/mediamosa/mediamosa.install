/**
 * Clean up current play and download tickets, as these moved and are no longer
 * valid or used.
 */
function mediamosa_update_7149() {

  // Clean up links location.
  $ticket_play_location = _mediamosa_update_helper_get_mountpoint() . '/links';

  if (mediamosa_io::file_exists($ticket_play_location) && mediamosa_io::is_dir($ticket_play_location)) {
    // Clean up the play tickets.
    mediamosa_io::exec(
      strtr(
        'find @ticket_play_location/. -maxdepth 2 -mindepth 1 -name "@wildmatch" -type l -delete',
        array(
          '@ticket_play_location' => $ticket_play_location,
          '@wildmatch' => str_repeat('?', mediamosa_settings::UUID_LENGTH),
        )
      )
    );

    // Clean up the tickets with extensions.
    mediamosa_io::exec(
      strtr(
        'find @ticket_play_location/. -maxdepth 2 -mindepth 1 -name "@wildmatch.*" -type l -delete',
        array(
          '@ticket_play_location' => $ticket_play_location,
          '@wildmatch' => str_repeat('?', mediamosa_settings::UUID_LENGTH),
        )
      )
    );

    // Try to remove directory.
    @drupal_rmdir($ticket_play_location);
  }

  // Clean up download_links location.
  $ticket_download_location = _mediamosa_update_helper_get_mountpoint() . '/download_links/';

  if (mediamosa_io::file_exists($ticket_download_location)) {
    // Clean up the play tickets.
    mediamosa_io::exec(
      strtr(
        'find @ticket_download_location/. -maxdepth 2 -mindepth 1 -name "@wildmatch" -type l -delete',
        array(
          '@ticket_download_location' => $ticket_download_location,
          '@wildmatch' => str_repeat('?', mediamosa_settings::UUID_LENGTH),
        )
      )
    );

    // Clean up the tickets with extensions.
    mediamosa_io::exec(
      strtr(
        'find @ticket_download_location/. -maxdepth 2 -mindepth 1 -name "@wildmatch.*" -type l -delete',
        array(
          '@ticket_download_location' => $ticket_download_location,
          '@wildmatch' => str_repeat('?', mediamosa_settings::UUID_LENGTH),
        )
      )
    );

    // Try to remove directory.
    @drupal_rmdir($ticket_download_location);
  }
}

