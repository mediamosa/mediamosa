function mediamosa_update_7136() {

  // Get all commands to convert.
  $nids = db_select('mediamosa_transcode_profile', 'tp')
    ->fields('tp', array('nid'))
    ->execute()
    ->fetchCol();

  // Now loop through the transcode profile nodes and convert them.
  foreach ($nids as $nid) {

    // Load the profile node.
    $node = node_load($nid);

    if ($node->command != '') {
