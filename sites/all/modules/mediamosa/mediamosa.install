      // Save the node again.
      node_save($node);
    }
  }
}

/**
 * Helper function for converting command values in tables.
 *
 * @param string $table_name
 *   The name of the table to convert. Must contain the 'command' column.
 * @param string $id_name
 *   The name of the ID (primary/unique) field of the table.
 */
function _mediamosa_update_helper_convert_command($table_name, $id_name) {
  // Will use variable to store position, in case we timeout.
  $start = variable_get('mediamosa_update_command_' . $table_name, 0);
  $length = 100;

  while (TRUE) {
    $commands = db_select($table_name, 'tbl')
      ->fields('tbl', array($id_name, 'command'))
      ->condition('command', '', '!=')
      ->isNotNull('command')
      ->range($start, $length)
      ->execute();

    // Done?
    if (!$commands->rowCount()) {
      break;
    }

    // Loop through the found commands and convert them.
    foreach ($commands->fetchAllKeyed() as $id_value => $command) {
      // In the new format, : is encoded to %3A, so if we find one, then we know
      // its not coverted.
      if (strpos($command, ':') === FALSE) {
        // Did not find ':', so its already converted.
        continue;
      }

      // Convert and update.
      db_update($table_name)
        ->fields(array(
          'command' => mediamosa_transcode_profile::convertOldCommand2NewCommand($command),
        ))
        ->condition($id_name, $id_value)
        ->execute();
    }

    // Next set.
    $start += $length;

    // In case we timeout.
    variable_get('mediamosa_update_command_' . $table_name, $start);
  }

  // Done, remove variable.
  variable_del('mediamosa_update_command_' . $table_name);
}

