/**
 * Move the stills to the normal mediafile data tree. If this script times out,
 * you can restart update again and the script will continue where it ended.
 * Will only move stills which are found as still in the database. All other
 * files under mountpount/data/stills will not be moved.
 */
function mediamosa_update_7147() {

  variable_set('mediamosa_current_mount_point_stills', variable_get('mediamosa_current_mount_point', '/srv/mediamosa'));
  variable_set('mediamosa_current_mount_point_stills_windows', variable_get('mediamosa_current_mount_point_windows', '\\\\'));

  variable_set('mediamosa_current_mount_point_temporary', mediamosa_storage::trim_uri(variable_get('mediamosa_current_mount_point', '/srv/mediamosa')) . 'data/transcode');
  variable_set('mediamosa_current_mount_point_temporary_windows', variable_get('mediamosa_current_mount_point_windows', '\\\\'));

  variable_set('mediamosa_current_mount_point_transition', mediamosa_storage::trim_uri(variable_get('mediamosa_current_mount_point', '/srv/mediamosa')) . 'data/transition');
  variable_set('mediamosa_current_mount_point_transition_windows', variable_get('mediamosa_current_mount_point_windows', '\\\\'));

  // Destination.
  $data_destination_mf = mediamosa_storage_local::SCHEME_STILLS . '://';

  // Source dir stills.
  $data_source_stills = mediamosa_storage::get_uri_data() . 'stills/';

  if (!mediamosa_io::file_exists($data_source_stills)) {
    throw new Exception(strtr("The mountpoint '@mount' does not exist.", array('@mount' => $data_source_stills)));
  }
  if (!mediamosa_io::is_readable($data_source_stills)) {
    throw new Exception(strtr("The mountpoint '@mount' is not read/writable.", array('@mount' => $data_source_stills)));
  }

  $messages = array();
  $stills_moved = 0;

  $prefixes = '0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';
  for ($x = variable_get(__FUNCTION__, 0); $x < strlen($prefixes); $x++) {

    $source_dir = mediamosa_storage::trim_uri($data_source_stills, '') . '/-/' . $prefixes[$x] . '/';
    $dest_dir = mediamosa_storage::trim_uri($data_destination_mf, '') . '/-/' . $prefixes[$x] . '/';

    // Make sure the source dir exists.
    if (!mediamosa_io::file_exists($source_dir) && !is_dir($source_dir)) {
      $messages[] = strtr("Still dir '@source' does not exists and can not be moved.", array('@source' => $source_dir));
      continue;
    }

    // Make sure the source dir exists.
    if (!mediamosa_io::file_exists($dest_dir) && !is_dir($dest_dir)) {
      $messages[] = strtr("Dest dir '@dest' does not exists and can not be moved.", array('@dest' => $dest_dir));
      continue;
    }

    // Open the sub directory.
    $fh = opendir($source_dir);
    while (($filename = readdir($fh)) !== FALSE) {
      // Skip anything that starts with a dot.
      if (strpos($filename, '.') === 0) {
        continue;
      }

      // Check if filename is a known mediafile id.
      // Do not care about still flag.
      $found = db_select('mediamosa_asset_mediafile', 'mf')
        ->fields('mf', array('mediafile_id'))
        ->condition('mediafile_id', $filename)
        ->execute()
        ->fetchField();

      // Not found as mediafile? Then skip.
      if (!$found) {
        continue;
      }

      // Now move still.
      if (!mediamosa_io::rename($source_dir . $filename, $dest_dir . $filename)) {
        $messages[] = strtr('Failed to move file @source to @dest.', array('@source' => $source_dir . $filename, '@dest' => $dest_dir . $filename));
      }
      else {
        $stills_moved++;
      }

      closedir($fh);
    }

    // Remove the dir.
    drupal_rmdir($source_dir);

    // Store the $x position.
    variable_set(__FUNCTION__, $x + 1);
  }

  // Remove still dir, when possible.
  @drupal_rmdir($data_source_stills);

  // Success, remove variable.
  variable_del(__FUNCTION__);

  if (empty($messages) && !$stills_moved) {
    return 'No stills found or moved.';
  }

  // Moved stills, no messages.
  if (empty($messages) && $stills_moved) {
    return strtr('Moved @count stills to main mediafile data dir.', array('@count' => $stills_moved));
  }

  // Got messages.
  return strtr("Moved @count stills to main mediafile data dir.<br />@messages", array('@count' => $stills_moved, '@messages' => implode('<br />', $messages)));
}

