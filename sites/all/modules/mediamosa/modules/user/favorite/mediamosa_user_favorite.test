    $response = $this->restCallPOST('user/' . $user_id . '/favorites/delete', $a_parameters);

    // Get the favorites again.
    $a_parameters = array(
      mediamosa_rest_call_user_favorite_create::FAV_TYPE => 'COLLECTION',
