    // Do POST /user/{user_id}/favorites/add call.
    $response = $this->restCallPOST('user/' . $user_id . '/favorites/create', $a_parameters);

    // Get the favorites of the user.
    $a_parameters = array(
      mediamosa_rest_call_user_favorite_create::FAV_TYPE => 'COLLECTION',
